server:
  port: 8080
  servlet:
    context-path: /identity

spring:
  datasource:
    url: jdbc:mysql://YOUR_RDS_ENDPOINT:3306/identity_service?useSSL=true&serverTimezone=UTC
    username: YOUR_DB_USERNAME
    password: YOUR_DB_PASSWORD
    hikari:
      maximum-pool-size: 10
      minimum-idle: 5
      connection-timeout: 30000
      idle-timeout: 600000
      max-lifetime: 1800000

  output:
    ansi:
      enabled: ALWAYS

  jpa:
    hibernate:
      ddl-auto: update
    show-sql: false
    properties:
      hibernate:
        format_sql: true
        dialect: org.hibernate.dialect.MySQLDialect

  sql:
    init:
      mode: never

jwt:
  signerKey: YOUR_JWT_SECRET_KEY_HERE
  valid-duration: 3600 # 1 hour
  refreshable-duration: 86400 # 24 hours

momo:
  partner-code: YOUR_MOMO_PARTNER_CODE
  access-key: YOUR_MOMO_ACCESS_KEY
  secret-key: YOUR_MOMO_SECRET_KEY
  redirect-url: https://YOUR_DOMAIN/payment/callback
  ipn-url: https://YOUR_DOMAIN/api/payment/callback
  request-type: captureWallet
  api-endpoint: https://test-payment.momo.vn/v2/gateway/api/create

google:
  client-id: YOUR_GOOGLE_CLIENT_ID
  client-secret: YOUR_GOOGLE_CLIENT_SECRET
  redirect-uri: https://YOUR_DOMAIN/api/auth/google/callback

aws:
  s3:
    bucket-name: YOUR_S3_BUCKET_NAME
    region: ap-southeast-1

admin:
  username: admin
  password: admin123
  email: admin@gamestore.com
